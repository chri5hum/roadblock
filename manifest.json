{
    "manifest_version": 3,
    "name": "Borderify",
    "version": "1.0",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "icons": {
        "48": "icons/border-48.png"
    },

    "action": {
        "default_icon": "icons/border-48.png"
    },

    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "borderify@example.com"
        }
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "permissions": [
		"tabs",
        "menus"
	]

}
